extends layout

block head
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js')
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.21/moment-timezone-with-data.min.js')
  script(type='text/javascript', src='/scripts/views/index.js')

block content
  h1= title
  p Time Zone Database Version:&nbsp;
    span#tz-data-version
  p
    a(href='https://www.timeanddate.com/news/time/') Time Zone News
  p
    a(href='https://www.iana.org/time-zones') IANA Time Zone Database
  p
    a(href='/next-change.json') JSON document of upcoming changes
  p
    table#countdown.table.table-bordered
      thead
      tbody
